<div class="list-products">
  <h1>Collection List</h1>
  <button-counter></button-counter>
  <h1>Collection {{section.settings.collection}}</h1>
  {% for product in collections[section.settings.collection].products %}
    <p>{{product.title}}</p>
  {% endfor %}
</div>

<script type="text/javascript">
  window.collectionProducts = {{collections[section.settings.collection].products | json}};
</script>

{% schema %}
  {
    "name": "Section name",
    "settings": [
      {
        "type": "collection",
        "id": "collection",
        "label": "Collection"
      }
    ],
    "presets": [
      {
        "category": "Collection",
        "name": "List Products in Collection",
        "settings": {}
      }
    ]
  }
{% endschema %}

